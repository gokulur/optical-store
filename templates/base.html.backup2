    <!-- ============================================
         CART DRAWER
    ============================================ -->
    <div class="aa-cart-overlay" id="aa-cart-overlay"></div>
    <div class="aa-cart-drawer" id="aa-cart-drawer" role="dialog" aria-label="Shopping cart">
      <div class="aa-cart-drawer__header">
        <h2 class="aa-cart-drawer__title">Shopping Cart</h2>
        <button class="aa-cart-drawer__close" id="aa-cart-close" aria-label="Close cart">✕</button>
      </div>

      <div class="aa-cart-drawer__body" id="aa-cart-body">
        <!-- Added to cart notification -->
        <div id="aa-cart-notify" style="display:none;align-items:center;gap:10px;padding:12px 16px;background:#d4edda;border:1px solid #c3e6cb;border-radius:8px;margin-bottom:14px;font-size:0.88rem;color:#155724;">
          <svg width="18" height="18" fill="none" stroke="#155724" stroke-width="2" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"/></svg>
          <span>Product added to cart successfully</span>
        </div>

        {% if not cart or not cart.items.exists %}
        <!-- Empty cart -->
        <div class="aa-cart-empty">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/>
          </svg>
          <h3>Your cart is empty</h3>
          <p>Add some items to get started!</p>
          <a href="{% url 'home' %}" class="aa-cart-btn aa-cart-btn--primary" style="display:inline-flex;width:auto;padding:12px 24px;">
            Continue Shopping
          </a>
        </div>
        {% else %}
        <!-- Cart items -->
        <div class="cart-items-list" id="aa-cart-items">
          {% for item in cart.items.all %}
          <div class="aa-cart-item" data-item-id="{{ item.id }}">
            <div class="aa-cart-item__img">
              <a href="{{ item.product.get_absolute_url }}">
                {% with first_image=item.product.images.first %}
                {% if first_image %}
                <img src="{{ first_image.image.url }}" alt="{{ item.product.name }}" loading="lazy">
                {% elif item.product.image %}
                <img src="{{ item.product.image.url }}" alt="{{ item.product.name }}" loading="lazy">
                {% else %}
                <img src="{% static 'img/no-image.jpg' %}" alt="{{ item.product.name }}" loading="lazy">
                {% endif %}
                {% endwith %}
              </a>
            </div>
            <div>
              <p class="aa-cart-item__name"><a href="{{ item.product.get_absolute_url }}">{{ item.product.name }}</a></p>
              <p class="aa-cart-item__price">₹{{ item.product.base_price }}</p>
              <div class="aa-cart-item__qty">
                <button class="aa-qty-btn decrease-qty" data-item-id="{{ item.id }}" data-url="{% url 'cart:decrease' item.id %}">−</button>
                <span class="aa-qty-val item-quantity-{{ item.id }}">{{ item.quantity }}</span>
                <button class="aa-qty-btn increase-qty" data-item-id="{{ item.id }}" data-url="{% url 'cart:increase' item.id %}">+</button>
              </div>
            </div>
            <div style="display:flex;flex-direction:column;align-items:flex-end;gap:4px;">
              <button class="aa-cart-item__remove remove-item" data-item-id="{{ item.id }}" data-url="{% url 'cart:remove' item.id %}" aria-label="Remove">
                <svg width="14" height="14" viewBox="0 0 320 512" fill="currentColor"><path d="M193.94 256L296.5 153.44l21.15-21.15c3.12-3.12 3.12-8.19 0-11.31l-22.63-22.63c-3.12-3.12-8.19-3.12-11.31 0L160 222.06 36.29 98.34c-3.12-3.12-8.19-3.12-11.31 0L2.34 120.97c-3.12 3.12-3.12 8.19 0 11.31L126.06 256 2.34 379.71c-3.12 3.12-3.12 8.19 0 11.31l22.63 22.63c3.12 3.12 8.19 3.12 11.31 0L160 289.94 262.56 392.5l21.15 21.15c3.12 3.12 8.19 3.12 11.31 0l22.63-22.63c3.12-3.12 3.12-8.19 0-11.31L193.94 256z"/></svg>
              </button>
              <span class="aa-cart-item__total item-total-{{ item.id }}">₹{{ item.total_price }}</span>
            </div>
          </div>
          {% endfor %}
        </div>
        {% endif %}
      </div>

      {% if cart and cart.items.exists %}
      <div class="aa-cart-drawer__footer">
        <div class="aa-cart-summary">
          <div class="aa-cart-summary__row">
            <span>Subtotal</span>
            <span class="cart-subtotal">₹{{ cart.get_subtotal|floatformat:2 }}</span>
          </div>
          <div class="aa-cart-summary__row aa-cart-summary__total">
            <span>Total</span>
            <span id="cart-total">₹{{ cart.get_total }}</span>
          </div>
        </div>
        <div class="aa-cart-actions">
          <a href="{% url 'cart:checkout' %}" class="aa-cart-btn aa-cart-btn--primary">Checkout</a>
          <a href="{% url 'cart:detail' %}" class="aa-cart-btn aa-cart-btn--secondary">View Cart</a>
        </div>
      </div>
      {% endif %}
    </div>


    <!-- ============================================
         PAGE CONTENT
    ============================================ -->
    <main id="xo-main-content" role="main" tabindex="-1">
      {% block content %}{% endblock %}
    </main>


    <!-- ============================================
         FOOTER
    ============================================ -->
    <footer class="aa-footer">
      <div class="aa-footer__inner">
        <div>
          <a href="{% url 'home' %}">
            <img src="{% static 'cdn/shop/files/al-ameen-optics-logo.png' %}" alt="Al Ameen Optics" style="height:44px;width:auto;" onerror="this.outerHTML='<span style=\'font-weight:700;font-size:1.2rem;\'>Al Ameen Optics</span>'">
          </a>
          <p style="font-size:0.82rem;color:#888;margin-top:10px;line-height:1.5;">Your vision matters more.<br>Trusted since 1927.</p>
        </div>
        <div class="aa-footer__links">
          <a href="{% url 'home' %}" class="aa-footer__link">Home</a>
          <a href=" " class="aa-footer__link">New Arrivals</a>
          <a href="{% url 'catalog:sunglasses_list' %}" class="aa-footer__link">Sunglasses</a>
          <a href="{% url 'catalog:eyeglasses_list' %}" class="aa-footer__link">Eyeglasses</a>
          <a href="{% url 'catalog:contact_lenses_list' %}" class="aa-footer__link">Contact Lenses</a>
