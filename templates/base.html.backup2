    <!-- ============================================
         ALL JAVASCRIPT
    ============================================ -->
    <script>
    /* =============================================
       TOAST NOTIFICATION SYSTEM
    ============================================= */
    function showAaToast(message, type = 'success') {
      const container = document.getElementById('aa-toast-container');
      if (!container) return;

      const icons = {
        success: '✓',
        error: '✕',
        warning: '⚠',
        info: 'ℹ'
      };

      const toast = document.createElement('div');
      toast.className = `aa-toast aa-toast--${type}`;
      toast.innerHTML = `
        <div class="aa-toast__icon">${icons[type] || '✓'}</div>
        <span class="aa-toast__msg">${message}</span>
        <button class="aa-toast__close" onclick="this.closest('.aa-toast').remove()">✕</button>
      `;

      container.appendChild(toast);
      requestAnimationFrame(() => toast.classList.add('show'));

      setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 400);
      }, 3500);
    }

    /* =============================================
       GET CSRF TOKEN
    ============================================= */
    function getCookie(name) {
      let cookieValue = null;
      if (document.cookie) {
        document.cookie.split(';').forEach(cookie => {
          cookie = cookie.trim();
          if (cookie.startsWith(name + '=')) {
            cookieValue = decodeURIComponent(cookie.slice(name.length + 1));
          }
        });
      }
      return cookieValue;
    }
    const csrftoken = getCookie('csrftoken');

    /* =============================================
       MOBILE DRAWER
    ============================================= */
    const menuTrigger = document.getElementById('aa-menu-trigger');
    const menuClose   = document.getElementById('aa-menu-close');
    const mobileDrawer  = document.getElementById('aa-mobile-drawer');
    const mobileOverlay = document.getElementById('aa-mobile-overlay');

    function openMobileMenu() {
      mobileDrawer.classList.add('active');
      mobileOverlay.classList.add('active');
      menuTrigger.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    function closeMobileMenu() {
      mobileDrawer.classList.remove('active');
      mobileOverlay.classList.remove('active');
      menuTrigger.classList.remove('active');
      document.body.style.overflow = '';
    }

    if (menuTrigger) menuTrigger.addEventListener('click', () => {
      mobileDrawer.classList.contains('active') ? closeMobileMenu() : openMobileMenu();
    });
    if (menuClose) menuClose.addEventListener('click', closeMobileMenu);
    if (mobileOverlay) mobileOverlay.addEventListener('click', closeMobileMenu);

    /* =============================================
       CART DRAWER
    ============================================= */
    const cartTrigger = document.getElementById('aa-cart-trigger');
    const cartClose   = document.getElementById('aa-cart-close');
    const cartDrawer  = document.getElementById('aa-cart-drawer');
    const cartOverlay = document.getElementById('aa-cart-overlay');

    function openCart() {
      cartDrawer.classList.add('active');
      cartOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    function closeCart() {
      cartDrawer.classList.remove('active');
      cartOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    if (cartTrigger) cartTrigger.addEventListener('click', openCart);
    if (cartClose)   cartClose.addEventListener('click', closeCart);
    if (cartOverlay) cartOverlay.addEventListener('click', closeCart);

    /* =============================================
       UPDATE CART COUNT
    ============================================= */
    function updateCartCount(count) {
      document.querySelectorAll('#aa-cart-count, .header-v24__cart-count').forEach(el => {
        el.textContent = count;
        el.style.transform = 'scale(1.4)';
        setTimeout(() => el.style.transform = 'scale(1)', 300);
      });
    }

    /* =============================================
       UPDATE WISHLIST COUNT
    ============================================= */
    function updateWishlistUI(added, btn, newCount) {
      if (btn) {
        btn.innerHTML = added
          ? `<svg width="20" height="20" viewBox="0 0 24 24" fill="red"><path d="M12 21s-6.7-4.4-10-9c-3.3-4.6.2-11 6-9 2 .6 4 2.4 4 2.4s2-1.8 4-2.4c5.8-2 9.3 4.4 6 9-3.3 4.6-10 9-10 9z"/></svg>`
          : `<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2"><path d="M12 21s-6.7-4.4-10-9c-3.3-4.6.2-11 6-9 2 .6 4 2.4 4 2.4s2-1.8 4-2.4c5.8-2 9.3 4.4 6 9-3.3 4.6-10 9-10 9z"/></svg>`;
      }
      const wc = document.getElementById('wishlist-count');
      if (wc) {
        wc.textContent = newCount;
        wc.classList.add('wishlist-count-bump');
        setTimeout(() => wc.classList.remove('wishlist-count-bump'), 300);
      }
    }

    /* =============================================
       WISHLIST TOGGLE
    ============================================= */
    document.addEventListener('click', function(e) {
      const btn = e.target.closest('.wishlist-btn');
      if (btn) {
        e.preventDefault();
        const productId = btn.dataset.productId;
        fetch(`/wishlist/toggle/${productId}/`, {
          method: 'POST',
          headers: { 'X-CSRFToken': csrftoken }
        })
        .then(r => r.json())
        .then(data => {
          updateWishlistUI(data.added, btn, data.wishlist_count);
          showAaToast(data.added ? 'Added to wishlist!' : 'Removed from wishlist', data.added ? 'success' : 'info');
        })
        .catch(() => showAaToast('Something went wrong', 'error'));
      }
    });

    /* =============================================
       REFRESH CART DRAWER
    ============================================= */
    function refreshCartDrawer() {
      fetch(window.location.href, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
        .then(r => r.text())
        .then(html => {
          const doc = new DOMParser().parseFromString(html, 'text/html');
          const newBody = doc.getElementById('aa-cart-body');
          const curBody = document.getElementById('aa-cart-body');
          if (newBody && curBody) curBody.innerHTML = newBody.innerHTML;

          const newFooter = doc.querySelector('.aa-cart-drawer__footer');
          const curFooter = document.querySelector('.aa-cart-drawer__footer');
          if (newFooter && curFooter) curFooter.innerHTML = newFooter.innerHTML;
        })
        .catch(err => console.warn('Cart refresh error:', err));
    }

    /* =============================================
       AJAX ADD TO CART
    ============================================= */
    function ajaxAddToCart(url, formData, btn) {
      if (btn) { btn.disabled = true; btn.style.opacity = '0.6'; }

      const icon    = btn?.querySelector('.xo-btn__icon');
      const loading = btn?.querySelector('.xo-btn__loading');
      if (icon)    icon.style.display = 'none';
      if (loading) loading.style.display = 'block';

      fetch(url, {
        method: 'POST',
        headers: { 'X-Requested-With': 'XMLHttpRequest', 'X-CSRFToken': csrftoken },
        body: formData
      })
      .then(r => r.json())
      .then(data => {
        if (data.success) {
          updateCartCount(data.cart_count);
          showAaToast(data.message || 'Added to cart!', 'success');

          // Show cart notify banner
          const notify = document.getElementById('aa-cart-notify');
          if (notify) { notify.style.display = 'flex'; setTimeout(() => notify.style.display = 'none', 3000); }

          refreshCartDrawer();
          openCart();
        } else if (data.limit) {
          showAaToast(data.message, 'warning');
          updateCartCount(data.cart_count);
        } else {
          showAaToast('Failed to add product', 'error');
        }
      })
      .catch(() => showAaToast('Something went wrong!', 'error'))
      .finally(() => {
        if (btn) { btn.disabled = false; btn.style.opacity = '1'; }
        if (icon)    icon.style.display = 'inline-block';
        if (loading) loading.style.display = 'none';
      });
    }

    /* =============================================
       CLICK: ADD TO CART BUTTONS
    ============================================= */
    document.addEventListener('click', function(e) {
      if (e.target.closest('.add-to-cart-grid-btn')) {
        e.preventDefault();
        const btn  = e.target.closest('.add-to-cart-grid-btn');
        const form = btn.closest('form');
        if (form) ajaxAddToCart(btn.dataset.url || form.action, new FormData(form), btn);
      }
      if (e.target.closest('.add-to-cart-btn')) {
        e.preventDefault();
        const btn  = e.target.closest('.add-to-cart-btn');
        const form = btn.closest('form');
        if (form) ajaxAddToCart(btn.dataset.url || form.action, new FormData(form), btn);
      }
      if (e.target.closest('.add-to-cart-wishlist-btn')) {
        e.preventDefault();
        const btn  = e.target.closest('.add-to-cart-wishlist-btn');
        const form = btn.closest('form');
        if (form) ajaxAddToCart(btn.dataset.url || form.action, new FormData(form), btn);
      }
    });

    /* =============================================
       FORM SUBMIT: ADD TO CART FORMS
    ============================================= */
    document.addEventListener('submit', function(e) {
      const form = e.target;
      if (form.classList.contains('add-to-cart-form') || (form.action && form.action.includes('cart'))) {
        e.preventDefault();
        const btn = form.querySelector('button[type="submit"], button');
        ajaxAddToCart(form.action, new FormData(form), btn);
      }
    }, true);

    /* =============================================
       CART QTY + REMOVE
    ============================================= */
    document.addEventListener('click', function(e) {
      // Increase / Decrease
      if (e.target.classList.contains('increase-qty') || e.target.classList.contains('decrease-qty')) {
        e.preventDefault();
        const btn = e.target;
        fetch(btn.dataset.url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
          .then(r => r.json())
          .then(data => {
            if (data.deleted || data.quantity === 0) {
              const item = document.querySelector(`.aa-cart-item[data-item-id="${btn.dataset.itemId}"], .cart-item[data-item-id="${btn.dataset.itemId}"]`);
              if (item) item.remove();
              if (!document.querySelector('.aa-cart-item, .cart-item')) refreshCartDrawer();
              return;
            }
            document.querySelectorAll('.item-quantity-' + btn.dataset.itemId).forEach(el => el.textContent = el.value = data.quantity);
            const itemTotal = document.querySelector('.item-total-' + btn.dataset.itemId);
            if (itemTotal) itemTotal.innerHTML = '₹' + data.item_total;
            const total = document.getElementById('cart-total');
            if (total) total.innerHTML = '₹' + data.cart_total;
            const sub = document.querySelector('.cart-subtotal');
            if (sub) sub.innerHTML = '₹' + data.cart_total;
          });
      }

      // Remove item
      if (e.target.closest('.remove-item')) {
        e.preventDefault();
        const btn = e.target.closest('.remove-item');
        fetch(btn.dataset.url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } })
          .then(r => r.json())
          .then(data => {
            if (data.success) {
              const item = document.querySelector(`.aa-cart-item[data-item-id="${btn.dataset.itemId}"], .cart-item[data-item-id="${btn.dataset.itemId}"]`);
              if (item) { item.style.opacity = '0'; setTimeout(() => { item.remove(); if (!document.querySelector('.aa-cart-item, .cart-item')) refreshCartDrawer(); }, 300); }
              updateCartCount(data.cart_count);
              const total = document.getElementById('cart-total');
              if (total) total.innerHTML = '₹' + data.cart_total;
              const sub = document.querySelector('.cart-subtotal');
              if (sub) sub.innerHTML = '₹' + data.cart_total;
              showAaToast(data.message || 'Item removed', 'info');
            }
          });
      }
    });

    /* =============================================
       ACTIVE NAV STRIP ITEM
    ============================================= */
    document.addEventListener('DOMContentLoaded', function() {
      const path = window.location.pathname;
      document.querySelectorAll('.aa-nav-strip-item').forEach(item => {
        if (item.getAttribute('href') && item.getAttribute('href') !== '/' && path.startsWith(item.getAttribute('href'))) {
          item.classList.add('active');
        }
      });
    });
    </script>

