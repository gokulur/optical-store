  {% block extra_head %}{% endblock %}
</head>

<body class="gradient">
  <div id="xo-root">

    <!-- Toast Container -->
    <div class="aa-toast-container" id="aa-toast-container"></div>

    {% if messages %}
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        {% for message in messages %}
        showAaToast("{{ message }}", "{{ message.tags }}");
        {% endfor %}
      });
    </script>
    {% endif %}

    <!-- ============================================
         ANNOUNCEMENT BAR
    ============================================ -->
    <div class="aa-announcement-bar">
      Free eye test with every frame purchase · <a href="{% url 'content:store_locations' %}">Find a store near you</a>
    </div>

    <!-- ============================================
         MAIN HEADER
    ============================================ -->
    <header class="aa-header" id="aa-header">

      <!-- Top Row -->
      <div class="aa-header__top">

        <!-- LEFT: Book Free Eyetest + account links on desktop -->
        <div class="aa-header__left">
          <!-- Book Free Eyetest with avatar -->
          <a href="{% url 'content:eye_test_booking' %}" class="aa-book-eyetest">
            <div class="aa-book-eyetest__avatar">
              <!-- Optician/doctor icon -->
              <svg viewBox="0 0 24 24" fill="none" stroke="#4A90E2" stroke-width="1.5" width="26" height="26">
                <circle cx="12" cy="8" r="4"/>
                <path d="M4 20c0-4 3.6-7 8-7s8 3 8 7"/>
              </svg>
            </div>
            <div>
              <!-- Eye test icon -->
              <svg class="aa-book-eyetest__icon" viewBox="0 0 24 24" fill="none" stroke="#1a1a1a" stroke-width="1.5" style="display:block;margin:0 auto 2px;">
                <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
                <circle cx="12" cy="12" r="3"/>
              </svg>
              <span class="aa-book-eyetest__label">BOOK FREE<br>EYETEST</span>
            </div>
          </a>

          <!-- Desktop account links -->
          <div class="aa-header__account-links" style="margin-left: 16px;">
            {% if not request.user.is_authenticated %}
            <a href="{% url 'users:register' %}" class="aa-header__account-link">Register</a>
            <span style="color:#ddd">|</span>
            <a href="{% url 'users:login' %}" class="aa-header__account-link">Login</a>
            {% else %}
            <a href="{% url 'users:profile' %}" class="aa-header__account-link">
              Hi, {{ request.user.first_name|default:request.user.username }}
            </a>
            <span style="color:#ddd">|</span>
            <a href="{% url 'orders:order_list' %}" class="aa-header__account-link">Orders</a>
            <span style="color:#ddd">|</span>
            <a href="{% url 'users:logout' %}" class="aa-header__account-link">Logout</a>
            {% endif %}
          </div>
        </div>

        <!-- CENTER: Logo -->
        <div class="aa-header__logo">
          <a href="{% url 'home' %}">
            <!-- Desktop logo -->
            <img src="{% static 'cdn/shop/files/al-ameen-optics-logo.png' %}"
                 alt="Al Ameen Optics"
                 class="aa-logo-img"
                 onerror="this.onerror=null; this.parentElement.innerHTML=`
                   <span style='font-family:Jost,sans-serif;font-size:1.6rem;font-weight:700;color:#1a1a1a;letter-spacing:0.02em;'>
                     <span style=\'font-family:Arial,sans-serif;\'>نظارات الأمين</span><br>
                     <span style=\'font-size:2rem;font-weight:800;color:#1a5c8c;\'>Al am</span><span style=\'font-size:2rem;font-weight:800;color:#e8a020;\'>een</span><br>
                     <span style=\'font-size:0.7rem;font-weight:400;letter-spacing:0.2em;color:#888;\'>Optics</span>
                   </span>`;">
            <!-- Mobile logo -->
            <img src="{% static 'cdn/shop/files/al-ameen-optics-logo.png' %}"
                 alt="Al Ameen Optics"
                 class="aa-logo-img-mobile"
                 onerror="this.style.display='none'">
          </a>
        </div>

        <!-- RIGHT: Icons -->
        <div class="aa-header__right">
          <!-- Wishlist -->
          <a href=" " class="aa-header__icon-btn" title="Wishlist" aria-label="Wishlist">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
            </svg>
            <span class="aa-count-badge" id="wishlist-count">{{ wishlist_count|default:"0" }}</span>
          </a>

          <!-- Cart -->
          <button class="aa-header__icon-btn" id="aa-cart-trigger" title="Cart" aria-label="Cart" type="button">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
              <path d="M6 2L3 6v14a2 2 0 002 2h14a2 2 0 002-2V6l-3-4z"/>
              <line x1="3" y1="6" x2="21" y2="6"/>
              <path d="M16 10a4 4 0 01-8 0"/>
            </svg>
            <span class="aa-count-badge" id="aa-cart-count">{{ cart_count|default:"0" }}</span>
          </button>

          <!-- Hamburger (mobile + desktop menu) -->
          <button class="aa-hamburger" id="aa-menu-trigger" aria-label="Menu" type="button">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>

      <!-- Search Row -->
      <!-- <div class="aa-header__search-row">
        <form action=" " method="get" class="aa-search-form" role="search">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
          <input type="text" name="q" placeholder="Search for glasses, brands, lenses..." autocomplete="off" value="{{ request.GET.q|default:'' }}">
          <button type="submit" class="aa-search-submit" aria-label="Search">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </button>
        </form>
      </div> -->

      <!-- Category Nav Strip -->
      <nav class="aa-header__nav-strip" aria-label="Category navigation">
        <div class="aa-nav-strip-inner">
          <a href=" " class="aa-nav-strip-item {% if request.resolver_match.url_name == 'product_list_all' %}active{% endif %}">New Arrivals</a>
          <a href="{% url 'catalog:sunglasses_list' %}" class="aa-nav-strip-item {% if 'sunglasses' in request.path %}active{% endif %}">Sunglasses</a>
          <a href="{% url 'catalog:eyeglasses_list' %}" class="aa-nav-strip-item {% if 'eyeglasses' in request.path %}active{% endif %}">Eyeglasses</a>
          <a href="{% url 'catalog:contact_lenses_list' %}" class="aa-nav-strip-item {% if 'contact-lenses' in request.path %}active{% endif %}">Contact Lenses</a>
          <a href="{% url 'catalog:product_list' 'reading_glasses' %}" class="aa-nav-strip-item">Kids</a>
          <a href="{% url 'catalog:brand_list' %}" class="aa-nav-strip-item {% if 'brands' in request.path %}active{% endif %}">Brands</a>
          <a href="{% url 'catalog:product_list' 'accessories' %}" class="aa-nav-strip-item">Accessories</a>
          <a href="{% url 'content:eye_test_booking' %}" class="aa-nav-strip-item">Book Eye Test</a>
          <a href="{% url 'content:store_locations' %}" class="aa-nav-strip-item">Stores</a>
        </div>
      </nav>

    </header>
    <!-- END header -->


    <!-- ============================================
         MOBILE DRAWER
    ============================================ -->
