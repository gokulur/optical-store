{% extends 'base.html' %}
{% load static %}
{% block title %}{{ product.name }} - Sunglasses{% endblock %}

{% block content %}
<style>
    /* Lens Modal Styles */
    .lens-modal {
        display: none;
        position: fixed;
        z-index: 10000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.6);
    }
    
    .lens-modal-content {
        background-color: #fefefe;
        margin: 3% auto;
        padding: 30px;
        border: 1px solid #888;
        width: 95%;
        max-width: 900px;
        border-radius: 10px;
        max-height: 90vh;
        overflow-y: auto;
    }
    
    .lens-modal-content .close {
        float: right;
        font-size: 32px;
        font-weight: bold;
        color: #666;
        cursor: pointer;
        line-height: 20px;
    }
    
    .lens-modal-content .close:hover {
        color: #000;
    }
    
    .lens-modal-content h2 {
        margin-bottom: 20px;
        clear: both;
    }
    
    .lens-modal-content h3 {
        font-size: 18px;
        margin: 20px 0 15px 0;
    }
    
    /* Lens Color Selection */
    .lens-colors {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 15px;
        margin-bottom: 30px;
    }
    
    .lens-color-option {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
    }
    
    .lens-color-option:hover {
        border-color: #999;
    }
    
    .lens-color-option input[type="radio"] {
        display: none;
    }
    
    .lens-color-option input[type="radio"]:checked + label,
    .lens-color-option:has(input:checked) {
        border-color: #000;
        background-color: #f9f9f9;
    }
    
    .lens-color-option label {
        cursor: pointer;
        display: block;
    }
    
    .color-swatch {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        margin: 0 auto 10px;
        border: 2px solid #ddd;
    }
    
    /* Lens Options */
    .lens-option-card {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 15px;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
    }
    
    .lens-option-card:hover {
        border-color: #999;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .lens-option-card input[type="radio"] {
        position: absolute;
        top: 20px;
        left: 20px;
    }
    
    .lens-option-card.selected {
        border-color: #000;
        background-color: #f9f9f9;
    }
    
    .lens-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        margin-left: 30px;
    }
    
    .lens-header h4 {
        margin: 0;
        font-size: 18px;
    }
    
    .lens-header .price {
        font-size: 20px;
        font-weight: bold;
        color: #000;
    }
    
    .lens-option-card p {
        margin-left: 30px;
        color: #666;
    }
    
    /* Power Input Form */
    .power-form {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        margin-top: 20px;
    }
    
    .power-form table {
        width: 100%;
        border-collapse: collapse;
        background: white;
    }
    
    .power-form th,
    .power-form td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }
    
    .power-form th {
        background: #000;
        color: #fff;
        font-weight: 500;
    }
    
    .power-form input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }
    
    .total-price-section {
        padding: 20px;
        background: #f5f5f5;
        margin: 20px 0;
        border-radius: 8px;
        text-align: center;
    }
    
    .total-price-section h3 {
        margin: 0;
        font-size: 24px;
    }
    
    .total-price-section span {
        color: #4caf50;
        font-size: 28px;
    }
    
    .btn-confirm-lens {
        width: 100%;
        padding: 18px;
        background: #000;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
    }
    
    .btn-confirm-lens:hover {
        background: #333;
    }
    
    /* Power Option Buttons */
    .power-selection-buttons {
        display: flex;
        gap: 15px;
        margin: 20px 0;
    }
    
    .power-option-btn {
        flex: 1;
        padding: 15px;
        border: 2px solid #e0e0e0;
        background: white;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-size: 16px;
        font-weight: 500;
    }
    
    .power-option-btn:hover {
        border-color: #999;
    }
    
    .power-option-btn.active {
        border-color: #000;
        background: #000;
        color: #fff;
    }
    
    @media (max-width: 768px) {
        .lens-modal-content {
            width: 98%;
            margin: 2% auto;
            padding: 20px;
        }
        
        .lens-colors {
            grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
        }
        
        .power-form {
            overflow-x: auto;
        }
    }
</style>

<!-- Main Product Section -->
<main class="content-for-layout focus-none" id="xo-main-content" role="main" tabindex="-1">
    <!-- Breadcrumb -->
    <section class="shopify-section section">
        <div class="xo-section color-background-1" style="--margin: 0;--pt: 15;--pb: 15;">
            <xo-container class="xo-container--box">
                <nav aria-label="breadcrumb" class="breadcrumb" role="navigation">
                    <ol class="breadcrumb__list" style="--justify:flex-start">
                        <li class="breadcrumb__item">
                            <a class="breadcrumb__link" href="{% url 'home' %}">Home</a>
                            <span class="breadcrumb__separator">/</span>
                        </li>
                        <li class="breadcrumb__item">
                            <a class="breadcrumb__link" href=" ">Sunglasses</a>
                            <span class="breadcrumb__separator">/</span>
                        </li>
                        <li class="breadcrumb__item breadcrumb__item--current">
                            <a aria-current="page" class="breadcrumb__link breadcrumb--current">{{ product.name }}</a>
                        </li>
                    </ol>
                </nav>
            </xo-container>
        </div>
    </section>

    <!-- Product Detail Section -->
    <section class="shopify-section section">
        <div class="xo-section color-background-1" style="--margin: 0;--pt: 0;--pb: 0;">
            <xo-container class="xo-container--box">
                <xo-grid>
                    <!-- Product Images -->
                    <xo-animate style="--xs: 12; --md: 7">
                        <!-- Desktop Gallery -->
                        <div class="xo-product-info-media-style3" style="position: sticky; top: 9.3rem;">
                            <xo-gallery aria-label="Gallery Viewer">
                                <xo-carousel xo-name="product-information-desktop">
                                    <div class="xo-product-info-media-style3__top">
                                        <xo-carousel-inner>
                                            <xo-carousel-list aria-label="Slider" role="list">
                                                <!-- Main Product Image -->
                                                {% if product.image %}
                                                <xo-carousel-slide class="xo-product-info-media-style3__slide">
                                                    <xo-image-zoom xo-use-wheel="false" xo-zoom="3">
                                                        <xo-gallery-item>
                                                            <div class="xo-product-info-media-style3__image">
                                                                <div class="xo-media" style="--media-aspect-ratio: 1/1">
                                                                    <div class="xo-image" style="--xo-ratio-percent: 1/1;">
                                                                        <img alt="{{ product.name }}" 
                                                                             src="{{ product.image.url }}" 
                                                                             loading="lazy" 
                                                                             id="mainProductImage"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </xo-gallery-item>
                                                    </xo-image-zoom>
                                                </xo-carousel-slide>
                                                {% endif %}

                                                <!-- Gallery Images -->
                                                {% for image in images %}
                                                <xo-carousel-slide class="xo-product-info-media-style3__slide">
                                                    <xo-image-zoom xo-use-wheel="false" xo-zoom="3">
                                                        <xo-gallery-item>
                                                            <div class="xo-product-info-media-style3__image">
                                                                <div class="xo-media" style="--media-aspect-ratio: 1/1">
                                                                    <div class="xo-image" style="--xo-ratio-percent: 1/1;">
                                                                        <img alt="{{ product.name }}" 
                                                                             src="{{ image.image.url }}" 
                                                                             loading="lazy"/>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </xo-gallery-item>
                                                    </xo-image-zoom>
                                                </xo-carousel-slide>
                                                {% endfor %}
                                            </xo-carousel-list>
                                        </xo-carousel-inner>
                                        
                                        <!-- Desktop Thumbnails -->
                                        <xo-carousel-thumbnail class="xo-product-info-media-style3__thumbnails" xo-gap="10" xo-per-view="5">
                                            <xo-carousel-inner>
                                                <xo-carousel-list>
                                                    {% if product.image %}
                                                    <xo-carousel-slide class="xo-product-info-media-style3__thumb-slide">
                                                        <div class="xo-media" style="--media-aspect-ratio: 1/1">
                                                            <div class="xo-image" style="--xo-ratio-percent: 1/1;">
                                                                <img src="{{ product.image.url }}" alt="thumbnail"/>
                                                            </div>
                                                        </div>
                                                    </xo-carousel-slide>
                                                    {% endif %}
                                                    {% for image in images %}
                                                    <xo-carousel-slide class="xo-product-info-media-style3__thumb-slide">
                                                        <div class="xo-media" style="--media-aspect-ratio: 1/1">
                                                            <div class="xo-image" style="--xo-ratio-percent: 1/1;">
                                                                <img src="{{ image.image.url }}" alt="thumbnail"/>
                                                            </div>
                                                        </div>
                                                    </xo-carousel-slide>
                                                    {% endfor %}
                                                </xo-carousel-list>
                                            </xo-carousel-inner>
                                        </xo-carousel-thumbnail>
                                    </div>
                                </xo-carousel>
                            </xo-gallery>
                        </div>
                    </xo-animate>

                    <!-- Product Info -->
                    <xo-animate class="main-product__right" style="--xs: 12; --md: 5">
                        <div class="xo-product-info-content" style="position: sticky; top: 9.3rem">
                            <!-- Product Title -->
                            <div class="xo-product-info-content__header">
                                <h1 class="xo-product-info-content__title" style="--fz:2.4rem">
                                    {{ product.name }}
                                </h1>
                                <button class="wishlist-btn circle-btn" data-product-id="{{ product.id }}">
                                    {% if product in request.user.wishlist.products.all %}
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="red">
                                        <path d="M12 21s-6.7-4.4-10-9c-3.3-4.6.2-11 6-9 2 .6 4 2.4 4 2.4s2-1.8 4-2.4c5.8-2 9.3 4.4 6 9-3.3 4.6-10 9-10 9z"/>
                                    </svg>
                                    {% else %}
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="black" stroke-width="2">
                                        <path d="M12 21s-6.7-4.4-10-9c-3.3-4.6.2-11 6-9 2 .6 4 2.4 4 2.4s2-1.8 4-2.4c5.8-2 9.3 4.4 6 9-3.3 4.6-10 9-10 9z"/>
                                    </svg>
                                    {% endif %}
                                </button>
                            </div>

                            <!-- Brand -->
                            {% if product.brand %}
                            <p style="margin: 10px 0; font-size: 14px; color: #666;">
                                Brand: <strong>{{ product.brand.name }}</strong>
                            </p>
                            {% endif %}

                            <!-- SKU -->
                            {% if product.sku %}
                            <p style="margin: 5px 0; font-size: 13px; color: #999;">
                                SKU: {{ product.sku }}
                            </p>
                            {% endif %}

                            <!-- Price -->
                            <div class="xo-product-info-content__price" style="padding: 20px 0;">
                                <div class="xo-price xo-price--larger">
                                    <div class="xo-price__container">
                                        <div class="xo-price__sale">
                                            <span class="xo-price__item xo-price__item--accent" id="productPrice">
                                                QAR {{ product.base_price }}
                                            </span>
                                            {% if product.compare_at_price %}
                                            <span class="xo-price__item xo-price__item--regular" style="text-decoration: line-through; margin-left: 10px; color: #999;">
                                                QAR {{ product.compare_at_price }}
                                            </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Description -->
                            <p class="xo-product-info-content__description" style="padding-bottom: 30px;">
                                {{ product.description|linebreaksbr }}
                            </p>

                            <!-- Color Variants -->
                            {% if variants %}
                            <div style="padding-bottom: 20px;">
                                <h3 style="font-size: 16px; margin-bottom: 15px;">Select Color:</h3>
                                <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                                    {% for variant in variants %}
                                    <div class="variant-option" 
                                         data-variant-id="{{ variant.id }}"
                                         onclick="selectVariant(this)"
                                         style="border: 2px solid #e0e0e0; padding: 10px 20px; border-radius: 5px; cursor: pointer; transition: all 0.3s;">
                                        {% if variant.color_code %}
                                        <span style="display: inline-block; width: 20px; height: 20px; background-color: {{ variant.color_code }}; border-radius: 50%; margin-right: 8px; vertical-align: middle;"></span>
                                        {% endif %}
                                        <span>{{ variant.color_name }}</span>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endif %}

                            <!-- Size Selection -->
                            {% if variants.0.size %}
                            <div style="padding-bottom: 20px;">
                                <h3 style="font-size: 16px; margin-bottom: 15px;">Select Size:</h3>
                                <select style="width: 100%; padding: 12px; border: 2px solid #e0e0e0; border-radius: 5px; font-size: 16px;">
                                    <option value="">Choose Size</option>
                                    {% for variant in variants %}
                                    {% if variant.size %}
                                    <option value="{{ variant.size }}">{{ variant.size }}</option>
                                    {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                            {% endif %}

                            <!-- Power Selection -->
                            <div style="padding-bottom: 20px;">
                                <h3 style="font-size: 16px; margin-bottom: 15px;">Add Prescription?</h3>
                                <div class="power-selection-buttons">
                                    <button class="power-option-btn active" onclick="selectPowerOption('without', this)">
                                        Without Power
                                    </button>
                                    <button class="power-option-btn" onclick="selectPowerOption('with', this)">
                                        With Power
                                    </button>
                                </div>
                            </div>

                            <!-- Product Form -->
                            <form method="POST" id="product_form_{{ product.id }}" action=" ">
                                {% csrf_token %}
                                <input type="hidden" name="product_id" value="{{ product.id }}">
                                <input type="hidden" name="selected_lens_color" id="selectedLensColor">
                                <input type="hidden" name="selected_lens_option" id="selectedLensOption">
                                <input type="hidden" name="total_lens_price" id="totalLensPrice" value="0">
                                <input type="hidden" name="power_type" id="powerType" value="without">
                                
                                <!-- Prescription Data -->
                                <input type="hidden" name="right_sph" id="hiddenRightSph">
                                <input type="hidden" name="right_cyl" id="hiddenRightCyl">
                                <input type="hidden" name="right_axis" id="hiddenRightAxis">
                                <input type="hidden" name="left_sph" id="hiddenLeftSph">
                                <input type="hidden" name="left_cyl" id="hiddenLeftCyl">
                                <input type="hidden" name="left_axis" id="hiddenLeftAxis">

                                <!-- Quantity -->
                                <xo-cart-quantity class="xo-quantity-style2" style="--width: 13.5rem; --height: 5rem">
                                    <xo-cart-quantity-minus class="xo-quantity-style2__button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="12" viewBox="0 0 10 2">
                                            <path fill-rule="evenodd" d="M.5 1C.5.7.7.5 1 .5h8a.5.5 0 110 1H1A.5.5 0 01.5 1z" fill="currentColor"/>
                                        </svg>
                                    </xo-cart-quantity-minus>
                                    <input class="xo-quantity-style2__number" 
                                           type="number" 
                                           name="quantity" 
                                           value="1" 
                                           min="1" 
                                           max="{{ product.stock }}">
                                    <xo-cart-quantity-plus class="xo-quantity-style2__button">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="12" viewBox="0 0 10 10">
                                            <path fill-rule="evenodd" d="M1 4.51a.5.5 0 000 1h3.5l.01 3.5a.5.5 0 001-.01V5.5l3.5-.01a.5.5 0 00-.01-1H5.5L5.49.99a.5.5 0 00-1 .01v3.5l-3.5.01H1z" fill="currentColor"/>
                                        </svg>
                                    </xo-cart-quantity-plus>
                                </xo-cart-quantity>

                                <div class="xo-space xo-space--vertical" style="--space: 2.5rem"></div>

                                <!-- Select Lenses Button (shows only when "With Power" is selected) -->
                                <button type="button" 
                                        class="xo-btn xo-btn--light xo-btn--primary xo-btn--block"
                                        onclick="openLensSelection()"
                                        id="selectLensesBtn"
                                        style="margin-bottom: 15px; display: none;">
                                    <span class="xo-btn__content">
                                        <span class="xo-btn__text">Select Lenses</span>
                                    </span>
                                </button>

                                <!-- Add to Cart -->
                                <button type="button" 
                                        class="xo-btn xo-btn--light xo-btn--primary xo-btn--block"
                                        onclick="addToCart()"
                                        id="addToCartBtn">
                                    <span class="xo-btn__content">
                                        <span class="xo-btn__text">Add to Cart</span>
                                    </span>
                                </button>

                                <div class="xo-space xo-space--vertical" style="--space: 1.5rem"></div>

                                <!-- Buy Now -->
                                <button type="submit" 
                                        class="shopify-payment-button__button"
                                        style="background: #000;">
                                    Buy it now
                                </button>
                            </form>

                            <!-- Specifications -->
                            {% if specifications %}
                            <div style="margin-top: 30px;">
                                <h3 style="font-size: 18px; margin-bottom: 15px;">Specifications:</h3>
                                <table style="width: 100%; border-collapse: collapse;">
                                    {% for spec in specifications %}
                                    <tr style="border-bottom: 1px solid #e0e0e0;">
                                        <td style="padding: 10px 0; font-weight: 500;">{{ spec.spec_key }}</td>
                                        <td style="padding: 10px 0; color: #666;">{{ spec.spec_value }}</td>
                                    </tr>
                                    {% endfor %}
                                </table>
                            </div>
                            {% endif %}

                            <!-- Shipping Info -->
                            <div class="shipping" style="margin-top: 30px;">
                                <div class="shipping_item" style="display: flex; gap: 15px; margin-bottom: 15px;">
                                    <svg height="27" width="24" viewBox="0 0 150 150">
                                        <path d="M139.75,121.3c-0.34,0.71-0.59,1.47-1.03,2.12..." fill="currentColor"/>
                                    </svg>
                                    <p style="margin: 0;">Estimate delivery: <strong>12-26 days</strong> (International), <strong>3-6 days</strong> India.</p>
                                </div>
                                <div class="shipping_item" style="display: flex; gap: 15px;">
                                    <svg height="27" width="22" viewBox="0 0 150 150">
                                        <path d="M94.51,19.67c0,0.77,0,1.36,0,1.96..." fill="currentColor"/>
                                    </svg>
                                    <p style="margin: 0;">Return within <strong>45 days</strong> of purchase.</p>
                                </div>
                            </div>
                        </div>
                    </xo-animate>
                </xo-grid>
            </xo-container>
        </div>
    </section>

    <!-- Product Description Tab -->
    {% if product.description %}
    <section class="shopify-section section">
        <div class="xo-section color-background-1" style="--margin: 0;--pt: 30;--pb: 30;">
            <xo-container class="xo-container--box">
                <h2 style="font-size: 24px; margin-bottom: 20px;">About this Product</h2>
                <div style="line-height: 1.8; color: #666;">
                    {{ product.description|safe }}
                </div>
            </xo-container>
        </div>
    </section>
    {% endif %}

    <!-- Related Products -->
    {% if related_products %}
    <section class="shopify-section section">
        <div class="xo-section color-background-1" style="--margin: 0;--pt: 30;--pb: 30;">
            <xo-container class="xo-container--box">
                <h2 style="font-size: 24px; margin-bottom: 30px;">You May Also Like</h2>
                <xo-grid style="--gap: 20px;">
                    {% for related in related_products %}
                    <xo-animate style="--xs: 6; --md: 3">
                        <div class="product-card">
                            <a href="{% url 'sunglass_detail' related.slug %}" style="text-decoration: none; color: inherit;">
                                <div class="xo-media" style="--media-aspect-ratio: 1/1; margin-bottom: 15px;">
                                    <div class="xo-image" style="--xo-ratio-percent: 1/1;">
                                        {% if related.image %}
                                        <img src="{{ related.image.url }}" alt="{{ related.name }}" loading="lazy"/>
                                        {% endif %}
                                    </div>
                                </div>
                                <p style="font-size: 12px; color: #999; margin-bottom: 5px;">{{ related.brand.name }}</p>
                                <h3 style="font-size: 16px; margin-bottom: 10px;">{{ related.name }}</h3>
                                <p style="font-size: 18px; font-weight: bold;">QAR {{ related.base_price }}</p>
                            </a>
                        </div>
                    </xo-animate>
                    {% endfor %}
                </xo-grid>
            </xo-container>
        </div>
    </section>
    {% endif %}
</main>

<!-- LENS SELECTION MODAL -->
<div id="lensModal" class="lens-modal">
    <div class="lens-modal-content">
        <span class="close" onclick="closeLensModal()">&times;</span>
        <h2>Select Lens Options</h2>
        
        <!-- Lens Color Selection -->
        <div class="lens-color-section">
            <h3>Select Lens Color:</h3>
            <div class="lens-colors">
                <div class="lens-color-option" onclick="selectLensColor(this, 'grey')">
                    <input type="radio" name="lens_color" value="grey" id="color-grey">
                    <label for="color-grey">
                        <div class="color-swatch" style="background-color: #808080;"></div>
                        <span>Grey</span>
                    </label>
                </div>
                <div class="lens-color-option" onclick="selectLensColor(this, 'brown')">
                    <input type="radio" name="lens_color" value="brown" id="color-brown">
                    <label for="color-brown">
                        <div class="color-swatch" style="background-color: #8B4513;"></div>
                        <span>Brown</span>
                    </label>
                </div>
                <div class="lens-color-option" onclick="selectLensColor(this, 'green')">
                    <input type="radio" name="lens_color" value="green" id="color-green">
                    <label for="color-green">
                        <div class="color-swatch" style="background-color: #228B22;"></div>
                        <span>Green</span>
                    </label>
                </div>
            </div>
        </div>
        
        <!-- Lens Options -->
        <div class="lens-options-section">
            <h3>Select Lens Type:</h3>
            
            <div class="lens-option-card" onclick="selectLensCard(this)">
                <input type="radio" name="lens_option" value="regular" data-price="250" id="regular">
                <div class="lens-header">
                    <h4>Regular 1.56</h4>
                    <span class="price">250 QAR</span>
                </div>
                <p>Basic lens with anti-reflection coating</p>
            </div>
            
            <div class="lens-option-card" onclick="selectLensCard(this)">
                <input type="radio" name="lens_option" value="premium" data-price="350" id="premium">
                <div class="lens-header">
                    <h4>Premium Essilor 1.5 Crizal Easy Pro</h4>
                    <span class="price">350 QAR</span>
                </div>
                <p>Advanced lens with superior clarity and protection</p>
            </div>
        </div>
        
        <!-- Power Input -->
        <div class="power-form">
            <h3>Enter Prescription:</h3>
            <table>
                <thead>
                    <tr>
                        <th>Eye</th>
                        <th>SPH</th>
                        <th>CYL</th>
                        <th>AXIS</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Right (OD)</td>
                        <td><input type="number" step="0.25" name="right_sph" id="rightSph"></td>
                        <td><input type="number" step="0.25" name="right_cyl" id="rightCyl"></td>
                        <td><input type="number" name="right_axis" id="rightAxis" min="0" max="180"></td>
                    </tr>
                    <tr>
                        <td>Left (OS)</td>
                        <td><input type="number" step="0.25" name="left_sph" id="leftSph"></td>
                        <td><input type="number" step="0.25" name="left_cyl" id="leftCyl"></td>
                        <td><input type="number" name="left_axis" id="leftAxis" min="0" max="180"></td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <!-- Total Price -->
        <div class="total-price-section">
            <h3>Total Lens Price: <span id="modalTotalPrice">0</span> QAR</h3>
        </div>
        
        <button class="btn-confirm-lens" onclick="confirmLensSelection()">
            Confirm Lens Selection
        </button>
    </div>
</div>

<script>
let basePrice = parseFloat("{{ product.base_price }}");
let selectedPowerType = 'without';
let selectedLensPrice = 0;
let selectedLensColorValue = '';
let selectedLensOptionValue = '';

// Variant Selection
function selectVariant(element) {
    document.querySelectorAll('.variant-option').forEach(el => {
        el.style.borderColor = '#e0e0e0';
        el.style.background = 'white';
    });
    element.style.borderColor = '#000';
    element.style.background = '#f9f9f9';
}

// Power Type Selection
function selectPowerOption(type, button) {
    selectedPowerType = type;
    
    // Update button styles
    document.querySelectorAll('.power-option-btn').forEach(btn => {
        btn.classList.remove('active');
    });
    button.classList.add('active');
    
    // Update hidden field
    document.getElementById('powerType').value = type;
    
    // Show/hide Select Lenses button
    const selectLensesBtn = document.getElementById('selectLensesBtn');
    if (type === 'with') {
        selectLensesBtn.style.display = 'block';
    } else {
        selectLensesBtn.style.display = 'none';
        // Reset lens selections
        selectedLensPrice = 0;
        updateMainPrice();
    }
}

// Modal Functions
function openLensSelection() {
    document.getElementById('lensModal').style.display = 'block';
    document.body.style.overflow = 'hidden';
}

function closeLensModal() {
    document.getElementById('lensModal').style.display = 'none';
    document.body.style.overflow = 'auto';
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('lensModal');
    if (event.target == modal) {
        closeLensModal();
    }
}

// Lens Color Selection
function selectLensColor(element, color) {
    document.querySelectorAll('.lens-color-option').forEach(el => {
        el.style.borderColor = '#e0e0e0';
        el.style.background = 'white';
    });
    element.style.borderColor = '#000';
    element.style.background = '#f9f9f9';
    
    const radio = element.querySelector('input[type="radio"]');
    if (radio) {
        radio.checked = true;
        selectedLensColorValue = color;
    }
}

// Lens Option Selection
function selectLensCard(card) {
    document.querySelectorAll('.lens-option-card').forEach(c => {
        c.classList.remove('selected');
    });
    card.classList.add('selected');
    
    const radio = card.querySelector('input[type="radio"]');
    if (radio) {
        radio.checked = true;
        selectedLensPrice = parseFloat(radio.dataset.price) || 0;
        selectedLensOptionValue = radio.value;
        updateModalPrice();
    }
}

function updateModalPrice() {
    document.getElementById('modalTotalPrice').textContent = selectedLensPrice;
}

function updateMainPrice() {
    const totalPrice = basePrice + selectedLensPrice;
    document.getElementById('productPrice').textContent = 'QAR ' + totalPrice.toFixed(2);
}

function confirmLensSelection() {
    if (!selectedLensColorValue) {
        alert('Please select a lens color');
        return;
    }
    
    if (!selectedLensOptionValue) {
        alert('Please select a lens option');
        return;
    }
    
    // Save selections to hidden fields
    document.getElementById('selectedLensColor').value = selectedLensColorValue;
    document.getElementById('selectedLensOption').value = selectedLensOptionValue;
    document.getElementById('totalLensPrice').value = selectedLensPrice;
    
    // Save prescription data
    document.getElementById('hiddenRightSph').value = document.getElementById('rightSph').value || '';
    document.getElementById('hiddenRightCyl').value = document.getElementById('rightCyl').value || '';
    document.getElementById('hiddenRightAxis').value = document.getElementById('rightAxis').value || '';
    
    document.getElementById('hiddenLeftSph').value = document.getElementById('leftSph').value || '';
    document.getElementById('hiddenLeftCyl').value = document.getElementById('leftCyl').value || '';
    document.getElementById('hiddenLeftAxis').value = document.getElementById('leftAxis').value || '';
    
    // Update main price
    updateMainPrice();
    
    // Close modal
    closeLensModal();
    
    alert('Lens selection confirmed! Total: QAR ' + (basePrice + selectedLensPrice).toFixed(2));
}

function addToCart() {
    if (selectedPowerType === 'without') {
        // Direct add to cart
        const form = document.getElementById('product_form_{{ product.id }}');
        const formData = new FormData(form);
        
        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product added to cart!');
            } else {
                alert('Error: ' + (data.message || 'Unable to add to cart'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
        });
    } else {
        // Check if lens is selected
        if (!selectedLensOptionValue) {
            alert('Please select lens options first');
            openLensSelection();
            return;
        }
        
        // Add to cart with lens options
        const form = document.getElementById('product_form_{{ product.id }}');
        const formData = new FormData(form);
        
        fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Product with lens options added to cart!');
            } else {
                alert('Error: ' + (data.message || 'Unable to add to cart'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred. Please try again.');
        });
    }
}
</script>
{% endblock %}