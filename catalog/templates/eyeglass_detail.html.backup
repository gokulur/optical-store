<script>
let basePrice = parseFloat("{{ product.base_price }}");
let selectedLensOption = null;
let selectedAddon = null;
let lensPrice = 0;
let addonPrice = 0;

function openLensSelection() {
    document.getElementById('lensModal').style.display = 'block';
    document.body.style.overflow = 'hidden';
}

function closeLensModal() {
    document.getElementById('lensModal').style.display = 'none';
    document.body.style.overflow = 'auto';
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('lensModal');
    if (event.target == modal) {
        closeLensModal();
    }
}

function showLensCategory(categoryId) {
    // Hide all categories
    document.querySelectorAll('.lens-category').forEach(cat => {
        cat.classList.remove('active');
    });
    
    // Remove active from all tabs
    document.querySelectorAll('.lens-tab').forEach(tab => {
        tab.classList.remove('active');
    });
    
    // Show selected category
    document.getElementById(categoryId).classList.add('active');
    
    // Activate clicked tab
    event.target.classList.add('active');
    
    // Reset selections
    resetSelections();
}

function selectLensCard(card) {
    // Remove selected class from all cards
    document.querySelectorAll('.lens-option-card').forEach(c => {
        c.classList.remove('selected');
    });
    
    // Add selected class to clicked card
    card.classList.add('selected');
    
    // Check the radio button
    const radio = card.querySelector('input[type="radio"][name="lens_choice"]');
    if (radio) {
        radio.checked = true;
        selectedLensOption = radio.value;
        lensPrice = parseFloat(radio.dataset.price) || 0;
        
        // Reset addon selection for this lens
        const addonGroup = radio.value.replace('-', '_') + '_addon';
        const addonRadios = card.querySelectorAll('input[type="radio"][name$="-addon"]');
        if (addonRadios.length > 0) {
            addonRadios[0].checked = true;
            addonPrice = 0;
        }
        
        updateTotalPrice();
    }
}

// Handle addon selection
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('input[type="radio"][name$="-addon"]').forEach(radio => {
        radio.addEventListener('change', function() {
            addonPrice = parseFloat(this.dataset.price) || 0;
            selectedAddon = this.value;
            updateTotalPrice();
        });
    });
    
    // Handle reading power selection
    document.querySelectorAll('input[name="reading_power"]').forEach(radio => {
        radio.addEventListener('change', function() {
            selectedLensOption = 'reading-' + this.value;
            lensPrice = parseFloat(this.dataset.price) || 150;
            addonPrice = 0;
            updateTotalPrice();
        });
    });
});

function updateTotalPrice() {
    const total = lensPrice + addonPrice;
    document.getElementById('totalPrice').textContent = total;
}

function resetSelections() {
    selectedLensOption = null;
    selectedAddon = null;
    lensPrice = 0;
    addonPrice = 0;
    updateTotalPrice();
    
    document.querySelectorAll('.lens-option-card').forEach(card => {
        card.classList.remove('selected');
    });
}

function confirmLensSelection() {
    if (!selectedLensOption) {
        alert('Please select a lens option');
        return;
    }
    
    // Save lens selection to hidden form fields
    document.getElementById('selectedLensOption').value = selectedLensOption;
    document.getElementById('selectedLensAddon').value = selectedAddon || '';
    document.getElementById('totalLensPrice').value = lensPrice + addonPrice;
    
    // Save prescription data
    document.getElementById('hiddenRightSph').value = document.getElementById('rightSph').value || '';
    document.getElementById('hiddenRightCyl').value = document.getElementById('rightCyl').value || '';
    document.getElementById('hiddenRightAxis').value = document.getElementById('rightAxis').value || '';
    document.getElementById('hiddenRightAdd').value = document.getElementById('rightAdd').value || '';
    
    document.getElementById('hiddenLeftSph').value = document.getElementById('leftSph').value || '';
    document.getElementById('hiddenLeftCyl').value = document.getElementById('leftCyl').value || '';
    document.getElementById('hiddenLeftAxis').value = document.getElementById('leftAxis').value || '';
    document.getElementById('hiddenLeftAdd').value = document.getElementById('leftAdd').value || '';
    
    // Update main product price display
    const totalPrice = basePrice + lensPrice + addonPrice;
    document.getElementById('productPrice').textContent = 'QAR ' + totalPrice.toFixed(2);
    
    // Close modal
    closeLensModal();
    
    // Show success message
    alert('Lens selection confirmed! Total: QAR ' + totalPrice.toFixed(2));
}

function addToCart() {
    // Submit the form
    const form = document.getElementById('product_form_{{ product.id }}');
    
    // Create FormData
    const formData = new FormData(form);
    
    // Send AJAX request
    fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('Product added to cart!');
            // Optionally redirect to cart
            // window.location.href = '/cart/';
        } else {
            alert('Error: ' + (data.message || 'Unable to add to cart'));
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
    });
}
</script>

